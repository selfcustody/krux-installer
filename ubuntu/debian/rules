#!/usr/bin/make -f

VERSION := $(shell dpkg-parsechangelog --show-field Version | cut -d- -f1)
VENV := .krux-installer-v$(VERSION)

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_build:
	python3 -m venv $(VENV)
	$(VENV)/bin/pip install --no-index --find-links=vendor poetry
	$(VENV)/bin/pip install --no-index --find-links=vendor -r requirements.txt
	$(VENV)/bin/pip install --no-index --find-links=vendor -r dev-requirements.txt
	$(VENV)/bin/python3 .ci/create-spec.py
	$(VENV)/bin/python3 -m PyInstaller krux-installer.spec

override_dh_auto_install:
	dh_auto_install
	install -Dm755 dist/krux-installer $(CURDIR)/debian/krux-installer/usr/bin/krux-installer

override_dh_quilt_patch:
	dh_quilt_patch --skip
